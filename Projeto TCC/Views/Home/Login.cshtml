
<html lang="pt-br">
<head>
    <link href="/your-path-to-fontawesome/css/fontawesome.css" rel="stylesheet">
    <link href="/your-path-to-fontawesome/css/brands.css" rel="stylesheet">
    <link href="/your-path-to-fontawesome/css/solid.css" rel="stylesheet">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="~/css/style-login.css" />
    <script src="https://kit.fontawesome.com/cf6fa412bd.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="card-body">
                <form method="post" class="container-form" action="/Home/Validacao">

                    <!-- Text input -->
                    <div class="form-group col-md-20">
                        <label class="control-label" for="user">Email</label>
                        <i class="fas fa-envelope"></i>
                        <input id="email" name="Email" type="text" placeholder=" " class="form-control" required="">
                    </div>

                    <!-- Password input -->
                    <div class="form-group col-md-20">
                        <label class="control-label" for="password">Senha</label>
                        <i class="fas fa-lock"></i>
                        <input id="password" name="Senha" type="password" placeholder="" class="form-control" required="">
                    </div>
                    <!-- Button -->
                    <div class="form-group pt-5">
                        <button id="login" name="Entrar" class="btn btn-success col-6">Entrar</button>

                        <a asp-action="Cadastro" asp-controller="Home" id="btnSignup" name="Inscrever" class="btn btn-outline-secondary col-5 text-black">Inscrever-se</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
